<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/kenya_uganda_rugby" />

    <LinearLayout
        android:id="@+id/flags"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ugandaFlag"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/uganda_flag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/uganda"
                android:textAllCaps="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/ugandaScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/hyphen"
            android:textColor="@android:color/black"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/kenyaScore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="48sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kenyaFlag"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/kenya_flag" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/kenya"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/flags"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/uganda_try"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#99FCDC04"
                    android:onClick="uganda_try"
                    android:text="@string/plusTry"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <Button
                    android:id="@+id/uganda_conversion"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#99FCDC04"
                    android:onClick="uganda_conversion"
                    android:text="@string/conversion"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <Button
                    android:id="@+id/uganda_drop"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#99FCDC04"
                    android:onClick="uganda_drop"
                    android:text="@string/drop"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <Button
                    android:id="@+id/uganda_penalty"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#99FCDC04"
                    android:onClick="uganda_penalty"
                    android:text="@string/penalty"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <Button
                    android:id="@+id/uganda_penalty_try"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#99FCDC04"
                    android:onClick="uganda_penalty_try"
                    android:text="@string/penaltyTry"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>
            </LinearLayout>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#000000" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/kenya_try"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#99BB0000"
                    android:onClick="kenya_try"
                    android:text="@string/plusTry"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <Button
                    android:id="@+id/kenya_conversion"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#99BB0000"
                    android:onClick="kenya_conversion"
                    android:text="@string/conversion"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <Button
                    android:id="@+id/kenya_drop"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#99BB0000"
                    android:onClick="kenya_drop"
                    android:text="@string/drop"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <Button
                    android:id="@+id/kenya_penalty"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:background="#99BB0000"
                    android:onClick="kenya_penalty"
                    android:text="@string/penalty"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textAllCaps="true"/>

                <Button
                    android:textAllCaps="true"
                    android:id="@+id/kenya_penalty_try"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#99BB0000"
                    android:onClick="kenya_penalty_try"
                    android:text="@string/penaltyTry"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/reset"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/reset"
            android:onClick="reset" />

    </LinearLayout>


</RelativeLayout>